<% layout("layouts/boilerplate") %>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
      <div class="alert alert-danger shadow-lg text-center p-4 rounded-4">
        <h3 class="mb-3">⚠️ Oops!</h3>

        <p class="fw-semibold">
          <%= err.message || "Something went wrong!" %>
        </p>

        <% if (process.env.NODE_ENV === "development" && err.stack) { %>
          <details class="text-start mt-3">
            <summary class="fw-bold">Error details</summary>
            <pre class="mt-2 small"><%= err.stack %></pre>
          </details>
        <% } %>

        <a href="/listings" class="btn btn-outline-danger mt-4">
          ← Back to Listings
        </a>
      </div>
    </div>
  </div>
</div>
