<!-- Search Result Message -->
<% if (typeof q !== 'undefined') { %>
  <div class="mt-4 mb-3">
    <h5>Search results for "<%= q %>"</h5>
    <% if (allListings.length === 0) { %>
      <p class="text-danger">
        No listings found for your query. Try a different keyword.
      </p>
    <% } %>
  </div>
<% } %>

<!-- Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% allListings.forEach(listing => { %>
    <div class="col mb-4">
      <div class="card h-100">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
          />
          <div class="card-body">
            <p class="card-text">
              <strong><%= listing.title %></strong><br />
              <%= new Intl.NumberFormat("en-IN", {
                style: "currency",
                currency: "INR"
              }).format(listing.price) %> / night
              <span class="tax-info"> +18% GST</span>
            </p>
          </div>
        </a>
      </div>
    </div>
  <% }) %>
</div>

<script>
  const taxSwitch = document.getElementById("switchCheckDefault");
  if (taxSwitch) {
    taxSwitch.addEventListener("click", () => {
      document.querySelectorAll(".tax-info").forEach(info => {
        info.classList.toggle("show-tax");
      });
    });
  }
</script>
